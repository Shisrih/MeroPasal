<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

<ImageView
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:scaleType="centerCrop"
    android:layout_marginTop="20dp"
    android:src="@drawable/editinfo"/>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/redprimaryAccent"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="First Name"/>

            //Set User First Name here//

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="Shishir"
                    android:textColor="@color/alwaysblack"
                    android:background="@drawable/editinfotxtfields"
                    android:drawableRight="@drawable/ic_account"/>


            </com.google.android.material.textfield.TextInputLayout>

            //Last Name

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/redprimaryAccent"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Last Name"/>

            //Set User Last Name here//

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bhandari"
                    android:padding="15dp"
                    android:textColor="@color/alwaysblack"
                    android:background="@drawable/editinfotxtfields"
                    android:drawableRight="@drawable/ic_account"/>


            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/redprimaryAccent"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Address"/>


            //Set Address Here//


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shitak-Marg, Khumaltar, Lalitpur-15"
                    android:padding="15dp"
                    android:textColor="@color/alwaysblack"
                    android:background="@drawable/editinfotxtfields"
                    android:drawableRight="@drawable/ic_address"/>


            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/redprimaryAccent"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Phone Number"/>


            //Set Phone Number Here//

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="+977"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:drawableLeft="@drawable/ic_nepal"
                    />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="9813123222"
                    android:padding="15dp"
                    android:textColor="@color/alwaysblack"
                    android:background="@drawable/editinfotxtfields"
                    android:drawableRight="@drawable/ic_phone"/>


            </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>


            //Edit Button//
            <Button
                android:id="@+id/editbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:text="Submit"
                android:padding="20dp"
                android:background="@color/redprimaryAccent"
                android:textColor="@color/alwayswhite"/>
        </LinearLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>





    </LinearLayout>
</ScrollView>





