<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:layout_height="wrap_content"
        >

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/toolbarlayout"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:layout_width="match_parent"
            app:titleEnabled="false"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Title"
            android:layout_height="match_parent">

            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/imageSlider"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                app:layout_collapseMode="parallax"
                android:fitsSystemWindows="true"
                app:sliderAnimationDuration="600"
                app:sliderAutoCycleDirection="back_and_forth"
                app:sliderAutoCycleEnabled="true"
                app:sliderIndicatorAnimationDuration="600"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorMargin="15dp"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="3dp"
                app:sliderIndicatorRadius="2dp"
                app:sliderIndicatorSelectedColor="#5A5A5A"
                app:sliderIndicatorUnselectedColor="#FFF"
                app:sliderScrollTimeInSec="1"
                app:sliderStartAutoCycle="true" />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@color/alwayswhite"
                android:text="1/5"
                android:background="@drawable/round_back"
                android:textSize="15dp"
                android:id="@+id/slidercount"
                android:layout_marginTop="100dp"
                android:textStyle="bold"
                android:drawableRight="@drawable/ic_photo"

                android:layout_gravity="center"
                android:textAlignment="center"
                android:gravity="center_horizontal" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/pdttoolbar"
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                android:background="#33000000" >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

            <RelativeLayout
                 android:layout_width="wrap_content"
                android:layout_margin="10dp"

                 android:layout_height="match_parent">


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"

           android:layout_centerInParent="true"

            android:id="@+id/backbtn"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />

            />


            </RelativeLayout>
                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_margin="10dp"

                    android:layout_alignParentEnd="true"

                    android:layout_alignParentRight="true"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_fav"
                        android:padding="5dp"
                        android:layout_centerInParent="true"

                        android:id="@+id/favbtn"
                         />





                </RelativeLayout>

                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>


        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:behavior_overlapTop="100dp"

        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

           >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:minHeight="800dp"
                app:cardCornerRadius="15dp"

                app:cardElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="30dp">

                    <TextView
                        android:id="@+id/prodname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Product Name"
                        android:textColor="#808080"
                        android:textSize="16dp"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:id="@+id/prodbrand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/prodname"
                        android:text="Brand"
                        android:textColor="#808080"
                        android:textSize="14dp"
                        android:textStyle="italic"

                        />

                    <RatingBar
                        android:id="@+id/prodratings"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/prodbrand"
                        android:clickable="false"
                        android:isIndicator="true"
                        android:numStars="5"

                        android:stepSize="1"
                        android:theme="@style/RatingBar" />

                    <TextView
                        android:id="@+id/prodprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/prodratings"
                        android:text="Rs 4000"
                        android:textColor="#F28500"
                        android:textSize="21sp"
                        android:textStyle="bold" />

                    <TextView

                        android:id="@+id/oldprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/prodratings"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@+id/prodprice"
                        android:background="@drawable/horizontaldash"
                        android:text="Rs.410"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/proddetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/prodprice"
                        android:layout_marginTop="20dp"
                        android:justificationMode="inter_word"
                        android:text="Product Details"
                        android:textColor="#808080"
                        android:textSize="13dp"

                        />

                    <View
                        android:id="@+id/line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/proddetail"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="40dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="40dp"
                        android:background="#A5A5A5" />

                    <TextView
                        android:id="@+id/ratetxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/line"
                        android:gravity="center_horizontal"
                        android:text="Rate This Product"


                        android:textAlignment="center"
                        android:textColor="@color/black"

                        android:textSize="16dp" />

                    <RatingBar
                        android:id="@+id/rateprod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_below="@+id/ratetxt"

                        android:layout_centerHorizontal="true"
                        android:numStars="5"
                        android:stepSize="1"

                        android:theme="@style/RatingBar"

                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rateprod"
                        android:text="Similar Products"
                        android:id="@+id/similartxt"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:textColor="@color/black"

                        />
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/similarproductview"
                        android:layout_below="@+id/similartxt"
                        />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/alwayswhite"
        android:orientation="horizontal"
        >


<!--        //Button for buy products-->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|bottom"

            android:layout_margin="10dp"
            android:src="@drawable/ic_pay"

            app:borderWidth="0dp"

            android:id="@+id/buybtn"

            />




<!--        button for esewa-->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|bottom"

            android:layout_margin="10dp"
            android:backgroundTint="#1B998B"
            app:borderWidth="0dp"
            android:layout_toRightOf="@+id/buybtn"

            android:id="@+id/esewabtn"
            android:src="@drawable/esewa"
            />


<!--        button to add to cart-->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="10dp"


            android:id="@+id/cartbtn"
            app:borderWidth="0dp"
            android:layout_alignParentEnd="true"

            android:src="@drawable/ic_cart3"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>