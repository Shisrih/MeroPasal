<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

//Fixed Search Bar in Homescreen//
    <LinearLayout
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/redprimaryAccent"
        android:layout_alignParentTop="true"
        android:padding="15dp"
        android:orientation="horizontal">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Search for products"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_search"
            android:background="@drawable/textfields"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="8">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_filter"/>
        </LinearLayout>

    </LinearLayout>

    <ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:scrollbars="none"
        android:layout_below="@+id/search"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


       //Image slider//
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:cardCornerRadius="20dp">

        <com.smarteist.autoimageslider.SliderView
            android:id="@+id/imageSlider"
            android:layout_width="match_parent"
            android:layout_height="200dp"

            app:sliderAnimationDuration="600"
            app:sliderAutoCycleDirection="back_and_forth"
            app:sliderAutoCycleEnabled="true"
            app:sliderIndicatorAnimationDuration="600"
            app:sliderIndicatorGravity="center_horizontal|bottom"
            app:sliderIndicatorMargin="15dp"
            app:sliderIndicatorOrientation="horizontal"
            app:sliderIndicatorPadding="3dp"
            app:sliderIndicatorRadius="2dp"
            app:sliderIndicatorSelectedColor="#5A5A5A"
            app:sliderIndicatorUnselectedColor="#FFF"
            app:sliderScrollTimeInSec="1"
            app:sliderStartAutoCycle="true" />
</androidx.cardview.widget.CardView>


        //Categories Grid View//
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/alwayswhite"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:layout_marginTop="5dp">

            //Category 1st row


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/categoryrow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                ////main category grid////
                //mobilephone//

            </androidx.recyclerview.widget.RecyclerView>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/categoryrow">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="More Categories"
                    android:textStyle="italic"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/ic_next"
                    android:drawablePadding="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="right"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


        //Exclusive Items Title//
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blueAccent"
            android:padding="15dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Our Exclusive Discounts"
                android:textColor="@color/alwayswhite"
                android:textStyle="italic"
                android:drawableLeft="@drawable/ic_exclusive"
                android:drawablePadding="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="See All"
                android:gravity="right"
                android:textColor="@color/alwayswhite"/>

        </LinearLayout>


        //Exclusive Items Horizantalscroll view//
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blueAccent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/exclusiveitems_stack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



        </LinearLayout>




    </LinearLayout>


</ScrollView>
</RelativeLayout>